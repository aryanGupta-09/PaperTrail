<div style="display: flex; justify-content: space-between; align-items: center;">
    <h3 style="margin: 0;">
        <a href="/">Back</a>
    </h3>
    <h1 style="margin: 0; text-align: center; flex-grow: 1;">Author Search Results</h1>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #f5f5f5;
    }
    h1 {
        text-align: center;
    }
</style>

<h2>Number of results: <%= results.length %></h2>
<table>
    <thead>
        <tr>
            <th>Author ID</th>
            <th>Author Name</th>
        </tr>
    </thead>
    <tbody>
        <% if (results && results.length > 0) { %>
            <% results.forEach(result => { %>
                <tr>
                    <td><%= result.author_id %></td>
                    <td><%= result.author_name %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="2" style="text-align: center;">No authors found matching the search criteria.</td>
            </tr>
        <% } %>
    </tbody>
</table>