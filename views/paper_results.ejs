<div style="display: flex; justify-content: space-between; align-items: center;">
    <h3 style="margin: 0;">
        <a href="/">Back</a>
    </h3>
    <h1 style="margin: 0; text-align: center; flex-grow: 1;">Search Results</h1>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #f5f5f5;
    }
    h1 {
        text-align: center;
    }
</style>

<h2>Number of results: <%= results.length %></h2>
<table>
    <thead>
        <tr>
            <th>DOI</th>
            <th>Title</th>
            <th>Authors</th>
            <th>Venue</th>
            <th>Citations</th>
            <th>Year</th>
            <th>Fields of Study</th>
        </tr>
    </thead>
    <tbody>
        <% if (results && results.length > 0) { %>
            <% results.forEach(result => { %>
                <tr>
                    <td><%= result.id %></td>
                    <td><%= result.title %></td>
                    <td><%= result.authors || "N/A" %></td>
                    <td><%= result.venue || "N/A" %></td>
                    <td><%= result.citations !== undefined ? result.citations : "N/A" %></td>
                    <td><%= result.year || "N/A" %></td>
                    <td><%= result.fields || "N/A" %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="7" style="text-align: center;">No results found</td>
            </tr>
        <% } %>
    </tbody>
</table>