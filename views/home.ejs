}

/* Gradient blob shapes */
body {
    font-family: 'Arial', sans-serif;
    background: #164dc2;  /* Solid background color */
    background: radial-gradient(circle at top right, #2197e5 0.5%, #ffffff00), #f3fdff; /* Radial gradient with controllable radius */
    margin: 0;
    padding: 0;
    color: #333;
    position: relative; /* Important for positioning gradient blobs */
}

/* Gradient blob shapes */
body::before, body::after {
    content: '';
    position: absolute;
    width: 500px; /* Blob size */
    height: 500px; /* Blob size */
    border-radius: 50%;
    background: radial-gradient(circle, rgba(184, 235, 255, 0.6) 50%, rgba(255, 255, 255, 0) 70%); /* Blurred edges for blob */
    top: 10%;  /* Adjust to place blob */
    left: 70%; /* Adjust to place blob */
    pointer-events: none;
    filter: blur(80px); /* Soft blur for edges */
    box-shadow: 0 0 100px rgba(178, 255, 183, 0.6); /* Glowing soft shadow */
    animation: blobAnimation 10s ease-in-out infinite;
}

body::after {
    width: 600px;
    height: 600px;
    top: 60%; /* Adjust to place second blob */
    left: 20%; /* Adjust to place second blob */
    background: radial-gradient(circle, rgba(178, 233, 255, 0.5) 50%, rgba(255, 255, 255, 0) 70%);
    filter: blur(80px);
    box-shadow: 0 0 120px rgba(0, 0, 0, 0.5); /* Larger glow */
    animation: blobAnimation 12s ease-in-out infinite;
}

/* Animation for moving blob shapes */
@keyframes blobAnimation {
    0% {
        transform: scale(1) translateX(0) translateY(0);
    }
    50% {
        transform: scale(1.1) translateX(30px) translateY(20px);
    }
    100% {
        transform: scale(1) translateX(0) translateY(0);
    }
}




