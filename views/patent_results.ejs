<div style="display: flex; justify-content: space-between; align-items: center;">
    <h3 style="margin: 0;">
        <a href="/">Back</a>
    </h3>
    <h1 style="margin: 0; text-align: center; flex-grow: 1;">Patent Search Results</h1>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #f5f5f5;
    }
    h1 {
        text-align: center;
    }
</style>

<h2>Number of results: <%= patents.length %></h2>
<table>
    <thead>
        <tr>
            <th>Patent ID</th>
            <th>Patent Title</th>
            <th>Author Name</th>
            <th>Assignee Organization</th>
            <th>Patent Year</th>
            <th>Patent Date</th>
            <th>Patent Abstract</th>
        </tr>
    </thead>
    <tbody>
        <% if (patents && patents.length > 0) { %>
            <% patents.forEach(patent => { %>
                <tr>
                    <td><%= patent.patent_id %></td>
                    <td><%= patent.patent_title %></td>
                    <td><%= patent.author_name || "N/A" %></td>
                    <td><%= patent.assignee_organization || "N/A" %></td>
                    <td><%= patent.patent_year || "N/A" %></td>
                    <td><%= patent.patent_date || "N/A" %></td>
                    <td><%= patent.patent_abstract || "N/A" %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="7" style="text-align: center;">No patents found matching the search criteria.</td>
            </tr>
        <% } %>
    </tbody>
</table>
